<% include ../partials/header %>
    <div class="row margin-top-25 margin-bottom-50">
        <h1>Edit Workout Program</h1>
        <div class="width-45">
            <form action="/workout-programs/<%=program._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <div id="name-input">
                        <label for="name">Program Name</label>
                        <input class="form-control" type="text" name="program[name]" placeholder="name" maxlength="60" value="<%= program.name %>" required>
                    </div>
                    <div id="select-input">
                        <label for="category">Body Part</label>
                        <select name="program[category]" value="<%= program.category %>" required>
                            <option value="<%= program.category %>"><%= program.category[0].toUpperCase() + program.category.substring(1, program.category.length) %></option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="description" >Description</label>
                    <textarea name="program[description]" rows="15" cols="72" placeholder="description" required><%= program.description %></textarea>
                </div>
                <% for(var i = 0; i < program.exercises.length; i++) { %>
                    <div class="form-group">
                        <label for="exercises">Exercise <%= i + 1 %></label>
                        <input class="form-control" type="text" name="program[exercises]" placeholder="name" maxlength="70" value="<%= program.exercises[i] %>" required>
                    </div>
                    <div class="form-group margin-bottom-100">
                        <div class="set-input">
                            <label for="sets">Sets</label>
                            <input class="form-control" type="number" name="program[sets]" placeholder="sets" min="1" step="1" value="<%= program.sets[i] %>" required>
                        </div>
                        <div class="rep-input">
                            <label for="reps">Reps</label>
                            <input class="form-control" type="text" name="program[reps]" placeholder="reps"  maxlength="70" value="<%= program.reps[i] %>" required>
                        </div>
                    </div>
                <% } %>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/workout-programs/<%= program.category %>/<%= program._id %>">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>