<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>
        <div class="width-45">
            <form action="/workout-programs/<%= program._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="comment[text]">Comment</label>
                    <textarea type="text" name="comment[text]" placeholder="Please be respectful, civil, and constructive when commenting." rows="15" cols="72" maxlength="3000"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/workout-programs/<%= program.cartegory %>/<%= program._id %>">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>