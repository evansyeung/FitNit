<% include ../partials/header %>
    <div class="row margin-top-25">
        <h1 style="text-align: center">Account Settings</h1>
        <div class="width-30">
            <form action="/account/<%= user._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control" type="text" name="user[email]" value="<%= user.email %>" required>
                </div>
                <div class="form-group">
                    <label for="fName">First Name</label>
                    <input class="form-control" type="text" name="user[fName]" value="<%= user.fName %>" required>
                </div>
                <div class="form-group">
                    <label for="lName">Last Name</label>
                    <input class="form-control" type="text" name="user[lName]" value="<%= user.lName %>" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/measurements">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>