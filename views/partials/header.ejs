                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/"><img src="https://d30y9cdsu7xlg0.cloudfront.net/png/22889-200.png"></img></a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <li class="<%= typeof page !== 'undefined' && page === 'measurements' ? 'active' : '' %>"><a href="/measurements">Home</a></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <% if(!currentUser) { %>
                  <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/login"><i class="fa fa-user-circle-o"></i> Login</a></li>
                  <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a href="/register"><i class="fa fa-user-plus"></i> Sign Up</a></li>
                <% } else { %>
                  <li><a href="#"><i class="fa fa-user-circle-o"></i> Signed in as, <%= currentUser.username %></a></li>
                  <li><a href="/logout"><i class="fa fa-sign-out"></i> Logout</a></li>
                <% } %>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>
        <!--Use bootstrap to style the alert-->
        <div class="container">
            <!--Even when error is empty it is still not set to undefined it is set to [] (empty array which is not falsfy)-->
            <!--Thus we need to check for length also-->
            <% if(error && error.length > 0) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <% if(success && success.length > 0) { %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>
        </div>
