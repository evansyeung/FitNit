<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Add a new Measurement</h1>
        <div class="width-30">
            <form action="/measurements" method="POST">
                <div class="form-group">
                    <label for="name">Date</label>
                    <input class="form-control" type="date" name="date" value="<%= moment().format('YYYY-MM-DD') %>" required>
                </div>
                <div class="form-group">
                    <label for="name">Height</label>
                    <input class="form-control" type="number" name="height" placeholder="70 in" min="1" max="108" step="1" required>
                </div>
                <div class="form-group">
                    <label for="name">Weight</label>
                    <input class="form-control" type="number" name="weight" placeholder="160 lbs" min="1" max="999" step="0.1" required>
                </div>
                <div class="form-group">
                    <label for="name">Chest</label>
                    <input class="form-control" type="number" name="chest" placeholder="38 in" min="1" max="100" step="1" required>
                </div>
                <div class="form-group">
                    <label for="name">Waist</label>
                    <input class="form-control" type="number" name="waist" placeholder="34 in" min="1" max="100" step="1" required>
                </div>
                <div class="form-group">
                    <label for="name">Hip</label>
                    <input class="form-control" type="number" name="hip" placeholder="34 in" min="1" max="100" step="1" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/measurements">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>